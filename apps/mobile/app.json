{
  "expo": {
    "name": "MeetRiders Mobile",
    "slug": "meet-riders-mobile",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "meetriders",
    "userInterfaceStyle": "automatic",
    "platforms": [
      "android",
      "ios",
      "web"
    ],
    "splash": {
      "backgroundColor": "#0f172a",
      "resizeMode": "contain"
    },
    "android": {
      "package": "com.meetriders.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "meetriders",
              "host": "auth",
              "pathPrefix": "/callback"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "MeetRiders uses your location to center the map and help you pin pickup/drop-off points."
      }
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "915689d1-92f5-460b-af43-b2401a5accaa"
      }
    },
    "owner": "lohitaksha06"
  }
}
